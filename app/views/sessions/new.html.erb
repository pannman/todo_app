<% provide(:title, 'ログインページ') %>
<%= link_to image_tag("title.png"), "/",class: "signup-image" %>
<div class="signup" id="login">
  <h1>ログイン</h1>
  <ul class ="success-flash">
      <li><%= flash[:success] %></li>
  </ul>
  <div class="signup-form" id="login-form">
    <ul class ="error_message-login">
      <% flash.each do |message_type, message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="mailadress">
        <%= f.label :"メールアドレス"%>
        <%= f.email_field :email, placeholder: "　メールアドレスを入力" %>
      </div>

      <div class="pass">
        <%= f.label :"パスワード"%>
        <%= f.password_field :password, placeholder: "　パスワードを入力"  %>
      </div>
      <div class ="remember-box">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span>ログイン状態を保持する</span>
        <% end %>
        <%= link_to "パスワードお忘れの方はこちら",new_password_reset_path, class: "passforget" %>
      </div>
  </div>
    <div class="finish" id ="login-finish">
      <%= f.submit "ログイン", class: "btn" %>
    </div>
    <% end %>
  <div class ="line">
  </div>
  <div class="login-folow">
    <%= link_to "サインアップはこちら",signup_path,method: :get %>
  </div>
</div>
